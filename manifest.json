{
  "manifest_version": 3,
  "name": "YouTube Transcript Extractor",
  "version": "1.2",
  "description": "Extract YouTube video transcripts with a click.",
  "permissions": ["activeTab", "clipboardWrite"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_title": "Toggle Transcript Extractor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/hello.png",
    "32": "icons/hello.png",
    "48": "icons/hello.png",
    "128": "icons/hello.png"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": ["content.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
