{
  "manifest_version": 3,
  "name": "YouTube Transcript Extractor Plus",
  "version": "1.1",
  "description": "Improved script to extract YouTube video transcripts with UI.",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "notifications"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_title": "Toggle Transcript Extractor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "all_frames":false,
      "js": ["content.js"],
      "matches": ["*://*.youtube.com/"]
    }
  ]
}
